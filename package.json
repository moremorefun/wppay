{
  "name": "paythefly-crypto-gateway",
  "version": "1.0.2",
  "description": "PayTheFly Crypto Gateway - cryptocurrency payment integration for WordPress",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "wp-env start",
    "stop": "wp-env stop",
    "destroy": "wp-env destroy",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "wp": "wp-env run cli wp",
    "lint": "pnpm lint:js && pnpm lint:css && pnpm lint:php",
    "lint:js": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:css": "stylelint 'src/**/*.{css,scss}'",
    "lint:php": "composer phpcs",
    "lint:fix": "pnpm lint:js --fix && pnpm lint:css --fix && composer phpcbf",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,css,scss}'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:php": "wp-env run tests-cli phpunit -- --configuration=/var/www/html/wp-content/plugins/paythefly/phpunit.xml",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "composer:install": "wp-env run cli composer install --working-dir=/var/www/html/wp-content/plugins/paythefly",
    "composer:update": "wp-env run cli composer update --working-dir=/var/www/html/wp-content/plugins/paythefly",
    "i18n:make-pot": "wp-env run cli wp i18n make-pot /var/www/html/wp-content/plugins/paythefly /var/www/html/wp-content/plugins/paythefly/languages/paythefly-crypto-gateway.pot",
    "i18n:make-json": "wp-env run cli wp i18n make-json /var/www/html/wp-content/plugins/paythefly/languages --no-purge",
    "tunnel:quick": "cloudflared tunnel --url http://localhost:8888",
    "zip": "pnpm build && node scripts/zip.js"
  },
  "devDependencies": {
    "@kucrut/vite-for-wp": "^0.9.4",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@wordpress/env": "^9.0.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "@wordpress/scripts": "^26.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.0",
    "msw": "^2.12.7",
    "prettier": "^3.1.0",
    "rollup-plugin-external-globals": "^0.13.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-external": "^4.0.1",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.44.0",
    "@wordpress/block-editor": "^12.15.0",
    "@wordpress/blocks": "^12.24.0",
    "@wordpress/components": "^25.13.0",
    "@wordpress/data": "^9.17.0",
    "@wordpress/element": "^5.24.0",
    "@wordpress/i18n": "^4.47.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.28.1"
}
